
@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    html, body {
        margin: 0;
        padding: 0;
        border: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
</style>

<div class="mini-toolbar" style="padding: 2px; border-bottom:0;">
    <table style="width: 100%;">
        <tr>
            <td style="white-space: nowrap;">
                <label>UserName: </label>
                <input class="mini-textbox" iconCls="icon-search" id="txtUserName" maxlength="20" />&nbsp;&nbsp;
                <a class="mini-button" iconCls="icon-search" id="btnSearch" onclick="onSearchClick()">Search</a>&nbsp;&nbsp;
            </td>
        </tr>
    </table>
</div>

<div class="mini-fit">
    <div id="datagrid1" class="mini-datagrid" style="width: 100%; height: 100%;"
         url="~/System/UserRole/List" idField="Id" sizeList="[10,30,50]" pageSize="10" allowAlternating="true"
         allowResizeColumn="false" allowMoveColumn="false" showEmptyText="true" emptyText="暂无数据" autoLoad="false"
         onloaderror="onDataGridLoadError()">
        <div property="columns">
            <div type="indexcolumn" width="40">No.</div>
            <div field="UserName" width="140" headerAlign="center" allowSort="true" align="center">UserName</div>
            <div field="NickName" width="140" headerAlign="center" allowSort="true" align="center">NickName</div>
            <div width="auto" renderer="onOperateRender">Operate</div>
        </div>
    </div>
</div>

<div id="win1" class="mini-window" title="查看用户权限" style="width: 550px; height: 300px; display: none;"
     showShadow="true" showModal="true" iconCls="icon-node">
    <div class="mini-toolbar" style="padding: 2px; border-bottom:0;">
        <table style="width: 100%;">
            <tr>
                <td style="white-space: nowrap;">
                    <a class="mini-button" iconCls="icon-reload" id="btnRefresh" onclick="onUserRoleRefreshClick()">Refresh</a>&nbsp;&nbsp;
                    <a class="mini-button" iconCls="icon-edit" id="btnUserRoleReset" onclick="onUserRoleResetClick()">Reset</a>
                </td>
            </tr>
        </table>
    </div>

    <div class="mini-fit">
        <div id="datagrid2" class="mini-datagrid" style="width: 100%; height: 100%;"
             url="~/System/UserRole/UserRoleList" idField="Id" sizeList="[10,30,50]" pageSize="10" allowAlternating="true"
             allowResizeColumn="false" allowMoveColumn="false" showEmptyText="true" emptyText="暂无数据" autoLoad="false"
             onloaderror="onDataGridLoadError()" showPager="false">
            <div property="columns">
                <div type="indexcolumn" width="40">No.</div>
                <div field="Name" width="180" headerAlign="center" align="center">RoleName</div>
                <div field="Remark" width="auto">Remark</div>
            </div>
        </div>
    </div>
</div>

<div id="win2" class="mini-window" title="重置用户权限" style="width: 700px; height: 400px; display: none;"
     showShadow="true" showModal="true" iconCls="icon-node">
    <div class="mini-toolbar" style="padding: 2px; border-bottom:0;">
        <table style="width: 100%;">
            <tr>
                <td style="white-space: nowrap;">
                    <a class="mini-button" iconCls="icon-ok" id="btnResetUserRoleOk" onclick="onUserRoleResetOkClick()">Ok</a>
                </td>
            </tr>
        </table>
    </div>

    <div class="mini-fit">
        <div id="datagrid3" class="mini-datagrid" style="width: 100%; height: 100%;"
             url="~/System/UserRole/RoleList" idField="Id" sizeList="[10,30,50]" pageSize="10" allowAlternating="true"
             allowResizeColumn="false" allowMoveColumn="false" showEmptyText="true" emptyText="暂无数据" autoLoad="false"
             onloaderror="onDataGridLoadError()" showPager="false" multiSelect="true" allowRowSelect="true">
            <div property="columns">
                <div type="indexcolumn" width="40">No.</div>
                <div type="checkcolumn"></div>
                <div field="Name" width="180" headerAlign="center" align="center">RoleName</div>
                <div field="Remark" width="auto">Remark</div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/Static/Js/Config.js"></script>
<script type="text/javascript" src="~/Static/Js/Common/Consts.js"></script>
<script type="text/javascript" src="~/Static/Js/Common/Extend.js"></script>
<script type="text/javascript" src="~/Static/Js/Common/MiniuiTool.js"></script>
<script type="text/javascript" src="~/Static/Js/Common/RegTool.js"></script>
<script type="text/javascript" src="~/Static/Js/System/UserRole.js"></script>